<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Toolbar.Top" parent="AppTheme">
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.TextView.Normal" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="AppTheme.TextView.Large" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:background">@drawable/active_button_background</item>
    </style>
</resources>
